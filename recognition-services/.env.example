p# Configurações da API Backend
API_BASE=http://localhost:3001
API_KEY=
KNOWN_FACES_ENDPOINT=/api/known-faces

# Configurações da WEBCAM
WEBCAM_INDEX=0
# 0 = webcam padrão (integrada do notebook)
# 1 = segunda câmera (USB externa)
# 2 = terceira câmera, etc.

# Taxa de processamento (frames por segundo)
FRAME_SAMPLER_FPS=2
# Valores recomendados: 1-5 FPS
# Menor = menos uso de CPU, maior = detecção mais rápida

# Reconhecimento facial
MATCH_TOLERANCE=0.5
# 0.4 = muito exigente (menos falsos positivos)
# 0.5 = balanceado (recomendado)
# 0.6 = mais permissivo (mais detecções, mas pode ter erros)

# Debounce entre detecções
DEDUP_MIN_SECONDS=60
# Tempo mínimo entre detecções do mesmo aluno

# Código da sala de aula
CLASSROOM_CODE=3AT.I

# Interface visual
SHOW_VIDEO=true
# true = mostra janela com vídeo da webcam
# false = roda em background sem interface

DRAW_BOXES=true
# true = desenha caixas ao redor dos rostos
# false = não desenha caixas
